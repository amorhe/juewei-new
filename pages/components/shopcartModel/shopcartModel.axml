<view style="width:750rpx;height:100rpx;"></view>
<view class="goodsBottom">
  <!-- <view class="fullReduce">满48减8；满68减10；满98减20</view> -->
  <view class="shopcart">
    <image class="shopcarImage" a:if="{{shopcartGoods.length==0}}" src="{{imageUrl}}shopcart_empty.png" />
    <image onTap="openShopcart" a:if="{{shopcartGoods.length>0}}" class="shopcarImage" src="{{imageUrl}}shopcart.png" />
    <view class="addcount" a:if="{{shopcartGoods.length>0}}">{{shopcartGoods.length}}</view>
    <view class="haveGoods">
      <view a:if="{{shopcartGoods.length>0}}">
        <text>￥</text>
        <text>{{priceAll}}</text>
      </view>
      <view>另需配送费{{dispatch_price}}元</view>
    </view>
    <view class="buyBtn" a:if="{{priceAll<send_price}}">￥{{send_price}}起送</view>
    <view class="buyBtn canBuy" onTap="goOrderSubmit" a:if="{{priceAll>send_price}}">立即购买</view>
  </view>
</view>
<!-- 购物车弹框 -->
<view  a:if="{{showShopcar}}" class="shopcarContent">
  <!-- <view class="fullReduce fontSmall">下单减8元，再买10元可减10元</view> -->
  <view class="clearShopcar" onTap="clearShopcart">
    <image src="../../common/img/deleteIcon.png" />
    <text>清空购物车</text>
  </view>
  <view class="shopcartWrap">
    <view class="goodsLi" a:for="{{shopcartGoods}}">
      <view class="goodsNameI">
        <view>
          <text>{{item.goods_name}}</text>
          <text a:if="{{item.taste_name}}">（{{item.taste_name}}）</text>
        </view>
        <view>{{item.goods_format}}</view>
      </view>
      <view class="goodsPriceBox">
        <text class="goodsOldPrice">￥28</text>
        <text class="numberColor">￥{{item.goods_price}}</text>
      </view>
      <view class="goodsNumber">
        <image src="{{imageUrl}}goods_reduce.png" />
        <text>{{item.goods_quantity}}</text>
        <image src="{{imageUrl}}goods_add.png" />
      </view>
    </view>
  </view>
  <view>
  <view class="nullView"></view>
  <view class="shopcart" a:if="{{shopcartGoods.length>0}}">
    <image class="shopcarImage" src="{{imageUrl}}shopcart.png" />
    <view class="addcount">{{shopcartGoods.length}}</view>
    <view class="haveGoods">
      <view>
        <text>￥</text>
        <text>{{priceAll}}</text>
      </view>
      <view>另需配送费6元</view>
    </view>
    <view class="buyBtn" a:if="{{priceAll<send_price}}">￥{{send_price}}起送</view>
    <view class="buyBtn canBuy" onTap="goOrderSubmit" a:if="{{priceAll>send_price}}">立即购买</view>
  </view>
  <!-- <view class="shopcart" a:if="{{shopcartGoods.length==0}}">
    <image class="shopcarImage" src="{{imageUrl}}shopcart_empty.png" />
    <view>另需配送费6元</view>
    <view class="buyBtn">￥30起送</view>
    <view class="buyBtn">未营业</view>
  </view> -->
</view>


</view>
<!-- 弹框组件 -->
<confirm content="{{content}}" mask="{{mask}}" modalShow="{{modalShow}}" onCounterPlusOne="onCounterPlusOne" isType="{{isType}}" />
<!-- 遮罩层 -->
<view a:if="{{mask1}}" class="mask" onTap="hiddenShopcart"></view>


